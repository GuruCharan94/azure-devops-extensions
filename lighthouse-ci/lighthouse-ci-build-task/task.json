{
    "id": "a7ea6fda-6f72-4e20-a1a7-4cd0bcbf7b61",
    "name": "lighthouse-ci",
    "friendlyName": "Lighthouse CI",
    "description": "Lighthouse CI",
    "helpMarkDown": "Lighthouse CI",
    "category": "Azure Pipelines",
    "author": "Gurucharan94",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Run LightHouse CI",
    "inputs": [
        {
            "name": "command",
            "type": "pickList",
            "label": "Command",
            "defaultValue": "healthcheck",
            "required": true,
            "helpMarkDown": "The lhci command to run",
            "options": {
                "healthcheck": "healthcheck",
                "collect" : "collect",
                "assert": "assert",
                "upload": "upload",
                "autorun": "autorun"
            },
            "properties": {
                "EditableOptions": "False"
            }
        },
        {
            "name": "targetArtifact",
            "type": "picklist",
            "label": "Target Artifact Name",
            "required": true,
            "defaultValue": "Build Pipeline",
            "visibleRule": "(command == upload || command == autorun)",
            "helpMarkDown": "Name of Target Artifact from which LHCI calculates build context. When executing task in build pipeline, leave default value. When in release, pick artifact from the dropdown.",
            "properties": {
                "EditableOptions": "True"
            }
        },
        {
            "name": "configFilePath",
            "type": "filePath",
            "label": "Path to Config File",
            "required": false,
            "helpMarkDown": "The path to the lighthouse CI configuration file."
        },
        {
            "name": "parameters",
            "type": "multiLine",
            "label": "CLI Parameters",
            "required": false,
            "helpMarkDown": "CLI options for Lighthouse CI."
        }
    ],
    "sourceDefinitions": [
        {            
            "target": "targetArtifact",            
            "endpoint": "/$(system.teamProject)/_apis/release/releases/$(release.releaseId)?api-version=4.1-preview.6",
            "selector": "jsonpath:$.artifacts[*].alias",
            "authKey": "tfs:teamfoundation"
        }  
    ],
    "execution": {
        "Node": {
            "target": "src/lighthouse-ci.js"
        }
    }
}